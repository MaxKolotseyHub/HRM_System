@model IEnumerable<HRM_System_UI.Models.Jobs.IndexJobViewModel>

@{
    ViewBag.Title = "Должности";
}

<h2>Список должностей</h2>

<p>
    @Html.ActionLink("Создать должность", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MinSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MinSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Редактирование", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
